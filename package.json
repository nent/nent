{
  "name": "@nent/core",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "main": "index.js",
  "author": "Jason Wicker <jason@nent.dev>",
  "homepage": "https://github.com/nent/nent#readme",
  "bugs": {
    "url": "https://github.com/nent/nent/issues",
    "email": "tech@nent.dev"
  },
  "repository": "https://github.com/nent/nent.git",
  "scripts": {
    ":dev ---": "---------------",
    "start": "run-p core:watch docs:start",
    "serve": "npx serve docs",
    ":core  ---": "---------------",
    "core:build": "yarn workspace @nent/core run build",
    "core:watch": "yarn workspace @nent/core run watch",
    "core:build:docs": "yarn workspace @nent/core run build:docs",
    ":docs  ---": "---------------",
    "docs:build": "yarn workspace @nent/docs run build",
    "docs:start": "yarn workspace @nent/docs run start",
    "docs:start:Ws": "yarn workspace @nent/docs run start:ws",
    ":test ---": "---------------",
    "test": "yarn workspace @nent/core run test",
    ":lint ---": "---------------",
    "lint": "eslint --ext .tsx,.ts packages/**",
    "format": "eslint --ext .tsx,.ts --fix packages/** >/dev/null 2>&1 || true",
    ":build ---": "---------------",
    "build": "run-s build:core build:docs",
    "build:core": "run-s clean:core core:build core:build",
    "build:docs": "run-s clean:docs core:build:docs docs:build",
    ":docker ---": "---------------",
    "docker": "run-s build:docs docker:build docker:push",
    "docker:build": "docker build -t nent/nent-docs .",
    "docker:run": "docker run --name nent-docs --rm -p 8181:80 nent/nent-docs",
    "docker:push": "docker push nent/nent-docs",
    ":workspace ---": "---------------",
    "ws:core": "yarn workspace @nent/core",
    "ws:docs": "yarn workspace @nent/docs",
    ":auto ---": "------------",
    "clean": "run-p clean:core clean:docs",
    "clean:core": "rm -fR ./packages/core/dist && rm -fR ./packages/core/coverage",
    "clean:docs": "rm -fR ./docs",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable && cp README.md ./packages/core",
    "postpublish": "pinst --enable && rm ./packages/core/README.md"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "12.0.1",
    "@popperjs/core": "2.9.1",
    "@stencil/eslint-plugin": "0.3.1",
    "@types/jest": "26.0.22",
    "@types/puppeteer": "5.4.3",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "@types/rollup-plugin-visualizer": "^2.6.0",
    "chalk": "4.1.0",
    "commitlint": "12.0.1",
    "copyfiles": "2.4.1",
    "eslint": "7.22.0",
    "eslint-cli": "1.1.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.2.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lerna": "4.0.0",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.9.0",
    "onchange": "7.1.0",
    "pinst": "2.1.6",
    "prettier": "2.2.1",
    "puppeteer": "6.0.0",
    "rimraf": "3.0.2",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-visualizer": "^4.2.2",
    "serve": "11.3.2",
    "typescript": "4.2.3",
    "yargs": "16.2.0"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "testPathIgnorePatterns": [
      "<rootDir>/.scratch/"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
