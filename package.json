{
  "name": "nent",
  "private": true,
  "license": "MIT",
  "author": "Jason Wicker <jason@nent.dev>",
  "homepage": "https://github.com/nent/nent#readme",
  "bugs": {
    "url": "https://github.com/nent/nent/issues",
    "email": "tech@nent.dev"
  },
  "repository": "https://github.com/nent/nent.git",
  "scripts": {
    ":build ---": "---------------",
    "build": "run-s build:core build:docs",
    "prepublish": "yarn build",
    "publish": "lerna publish patch --yes",
    "prepublish:test": "yarn build",
    "publish:test": "lerna publish --canary --preid beta --yes",
    ":dev ---": "---------------",
    "start": "run-p start:core start:docs",
    "serve": "serve docs",
    ":core  ---": "---------------",
    "prebuild:core": "cp README.md ./packages/core/README.md",
    "build:core": "yarn workspace @nent/core run build",
    "start:core": "yarn workspace @nent/core run start",
    "watch:core": "yarn workspace @nent/core run watch",
    ":docs  ---": "---------------",
    "build:docs": "yarn workspace @nent/docs run build",
    "watch:docs": "yarn workspace @nent/docs run watch",
    "start:docs": "yarn workspace @nent/docs run start",
    "start:docs:ws": "yarn workspace @nent/docs run start:ws",
    ":vscode  ---": "---------------",
    "prebuild:vscode": "cp README.md ./packages/vscode/README.md",
    "build:vscode": "yarn workspace nent run build",
    "publish:vscode": "yarn workspace nent run publish",
    ":test ---": "---------------",
    "test": "yarn workspace @nent/core run test",
    ":lint ---": "---------------",
    "lint": "eslint --ext .tsx,.ts packages/core/src/**",
    "format": "eslint --ext .tsx,.ts --fix packages/core/src/** >/dev/null 2>&1 || true",
    ":docker ---": "---------------",
    "docker": "run-s build docker:build docker:push",
    "docker:build": "docker build -t nent/nent-docs .",
    "docker:run": "docker run --name nent-docs --rm -p 8181:80 nent/nent-docs",
    "docker:push": "docker push nent/nent-docs",
    ":workspace ---": "---------------",
    "core": "yarn workspace @nent/core",
    "angular": "yarn workspace @nent/angular",
    "react": "yarn workspace @nent/react",
    "docs": "yarn workspace @nent/docs",
    "example": "yarn workspace @nent/example",
    "vscode": "yarn workspace nent",
    ":auto ---": "------------",
    "clean": "lerna clean && run-p clean:core clean:docs",
    "clean:core": "yarn ws:core run prebuild",
    "clean:docs": "yarn ws:docs run prebuild",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "12.1.4",
    "@popperjs/core": "2.9.2",
    "@stencil/eslint-plugin": "0.3.1",
    "@types/jest": "26.0.23",
    "@types/puppeteer": "5.4.3",
    "@types/rollup-plugin-visualizer": "4.2.0",
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "chalk": "4.1.1",
    "commitlint": "12.1.4",
    "copyfiles": "2.4.1",
    "dotenv": "10.0.0",
    "eslint": "7.29.0",
    "eslint-cli": "1.1.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "glob-parent": "6.0.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lerna": "4.0.0",
    "normalize-url": "6.1.0",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.10.0",
    "onchange": "7.1.0",
    "pinst": "2.1.6",
    "prettier": "2.3.1",
    "puppeteer": "10.0.0",
    "rimraf": "3.0.2",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-visualizer": "5.5.0",
    "serve": "12.0.0",
    "trim-newlines": "4.0.2",
    "typescript": "4.3.4",
    "yargs": "17.0.1"
  },
  "jest": {
    "preset": "@stencil/core/testing",
    "testPathIgnorePatterns": [
      "<rootDir>/.scratch/"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
